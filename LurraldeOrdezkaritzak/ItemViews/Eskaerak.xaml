<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LurraldeOrdezkaritzak.ItemViews.Eskaerak">
    <VerticalStackLayout Padding="10">
        <Frame BorderColor="Black" CornerRadius="20" Padding="10" BackgroundColor="White" HeightRequest="130" VerticalOptions="Start">
            <VerticalStackLayout HorizontalOptions="Fill" Spacing="5">

                <Grid ColumnDefinitions="50, *, Auto" Padding="10">
                    <Label Text="{Binding Id}" VerticalOptions="Center" FontSize="23" TextColor="Black" Grid.Column="0"/>
                    <Label Text="{Binding Kontzeptua}" VerticalOptions="Center" FontSize="23" TextColor="Black" Grid.Column="1"/>
                    <Button Text="Ikusi" HeightRequest="35" WidthRequest="100" BackgroundColor="Black" TextColor="White" Clicked="Ikusi_clicked" Grid.Column="2"/>
                </Grid>

                <Grid ColumnDefinitions="*, Auto" Padding="10">
                    <Label Text="{Binding Izena}" VerticalOptions="Center" FontSize="20" TextColor="Black" Grid.Column="0"/>
                    <Label Text="{Binding EskaeraData}" VerticalOptions="Center" FontSize="20" TextColor="Black" Grid.Column="1"/>
                </Grid>

            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView>
