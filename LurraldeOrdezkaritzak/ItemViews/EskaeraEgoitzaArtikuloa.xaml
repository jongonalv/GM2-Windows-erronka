<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LurraldeOrdezkaritzak.ItemViews.EskaeraEgoitzaArtikuloa">
    
    <VerticalStackLayout Spacing="20">
        <Frame BorderColor="#CCCCCC" CornerRadius="15" Padding="15" BackgroundColor="White" HeightRequest="100" VerticalOptions="Start" HasShadow="True">
            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="{Binding Id}" Grid.Column="0" VerticalOptions="Center" FontSize="20" TextColor="Black" FontAttributes="Bold"/>
                <Label Text="{Binding ArtikuloaIzena}" Grid.Column="1" VerticalOptions="Center" FontSize="20" TextColor="Black"/>
                <Label Text="{Binding Kantitatea}" Grid.Column="2" VerticalOptions="Center" FontSize="20" TextColor="Black"/>
                <Button Text="Entregatu"  Grid.Column="3" HeightRequest="20" WidthRequest="120" BackgroundColor="Black" Clicked="OnEntregatuClicked"  TextColor="White"/>


            </Grid>

        </Frame>
    </VerticalStackLayout>
</ContentView>
