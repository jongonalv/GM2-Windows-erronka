<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LurraldeOrdezkaritzak.ItemViews.Stock">

    <VerticalStackLayout Spacing="10">
        <Frame BorderColor="Black" CornerRadius="20" Padding="0" BackgroundColor="White" HeightRequest="90" VerticalOptions="Start">
            <HorizontalStackLayout Spacing="50" HorizontalOptions="Center" Padding="10">
                <Label Text="{Binding Id}" VerticalOptions="Center" FontSize="23" TextColor="Black"/>
                <Label Text="{Binding Izena}" VerticalOptions="Center" FontSize="23" TextColor="Black"/>
                <Label Text="{Binding Prezioa}" VerticalOptions="Center" FontSize="23" TextColor="Black"/>
                <Label Text="{Binding Kantitatea}" VerticalOptions="Center" FontSize="23" TextColor="Black"/>
            </HorizontalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView>
