<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LurraldeOrdezkaritzak.MainPage">

    <Grid>
        <Image Source="fondosaioahasi.jpg" Aspect="AspectFill"
               VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"  />

        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25"
                HorizontalOptions="Center"
                VerticalOptions="Center">


                <Image Source="logoTuercas.png" WidthRequest="200" />

                <Frame CornerRadius="10" BorderColor="Gray" Padding="20" BackgroundColor="White"
                       Opacity="0.9" WidthRequest="300" HeightRequest="300"
                       HorizontalOptions="Center">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Erabiltzailea" TextColor="Black"/>
                        <Entry />
                        <Label Text="Pasahitza" TextColor="Black"/>
                        <Entry IsPassword="True" />
                        <Button Text="Saioa hasi" BackgroundColor="DarkOrange" TextColor="White" Clicked="OnSaioaHasiClicked" />
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
